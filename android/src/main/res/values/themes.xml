<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
    </style>

    <style name="Theme.compat" parent="Theme.App">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="Theme.Splash" parent="Theme.App">
        <item name="colorOnSurface">#000000</item>
        <item name="colorBackgroundSplash">#FFF</item>
        <item name="iconSplashTint">#000000</item>
        <item name="android:windowBackground">@drawable/bg_splash_light</item>
        <item name="android:statusBarColor">?attr/colorBackgroundSplash</item>
        <item name="android:navigationBarColor">?attr/colorBackgroundSplash</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <!-- Crash Activity Theme - Dark background with no black screen -->
    <style name="Theme.Crash" parent="Theme.App">
        <item name="android:windowBackground">#FF121212</item>
        <item name="android:statusBarColor">#FF121212</item>
        <item name="android:navigationBarColor">#FF121212</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>
